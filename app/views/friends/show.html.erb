<div class="row align-items-md-stretch">
      <div class="col-md-6">
        <div class="h-100 p-5 pb-4 text-white bg-dark rounded-3">
          <h1>
          <%= @friend.first_name %>
          <%= @friend.last_name %>
          </h1>

          <div class="mb-5">
            <div>
              <%= @friend.email %>
            </div>
            <div>
              <%= @friend.phone %>
            </div>
            <div>
              <%= @friend.twitter %>
            </div>
         </div>

          <div>
            <%= link_to "Edit", edit_friend_path(@friend), class: "btn btn-primary" %> 
            <%= link_to "Back", friends_path, class: "btn btn-secondary" %>   
            <%= button_to "Delete this friend", @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm mt-1" %>
          </div>
        </div>
      </div>
</div>